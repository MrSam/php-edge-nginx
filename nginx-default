server {
    listen 80;
    root /var/www/public;

    pagespeed on;

    location / {
        try_files $uri $uri/ /index.php$is_args$args;
    }

    location ~ \.php$ {
        try_files $uri =404;

        fastcgi_pass 127.0.0.1:9000;
        include fastcgi.conf;
    }

    location = /robots.txt { log_not_found off; }
    location = /favicon.ico { log_not_found off; }

    location ~ /\. { deny all; log_not_found off; }
}